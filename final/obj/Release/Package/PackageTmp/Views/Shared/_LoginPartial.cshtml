@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

       <ul class="nav navbar-nav navbar-right">
<li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <span class="glyphicon glyphicon-user"></span>
        <strong>Welcome @User.Identity.Name</strong>
        <span class="glyphicon glyphicon-chevron-down"></span>
    </a>
    <ul class="dropdown-menu">
        <li>
            <div class="navbar-user">
                <div class="row">
                    <div class="col-lg-4">
                        <p class="text-center">
                            <span class="glyphicon glyphicon-user img-size"></span>
                        </p>
                    </div>
                    <div class="col-lg-8">
                        <p class="text-right">
                            <strong>
                                @User.Identity.Name
                            </strong>
                        </p>
                        @if (User.IsInRole("employer"))
                        {
                            <a href="~/jobs" class="btn btn-success">My Jobs</a><br /><br />
                            <a href="~/Jobs/Create" class="btn btn-success">Publish new Job</a><br />
                        @Html.ActionLink("Edite Profile", "Manage", "Account", routeValues: null, htmlAttributes: new { title = "Manage"})
                        }
                        else if (User.IsInRole("employee"))
                        {
                            <a href="~/Home/ShowJObsApllayIt" class="btn btn-success btn-block">View all Jobs apllied </a> <br /><br />
                        
                        @Html.ActionLink("Edite Profile", "Manage", "Account", routeValues: null, htmlAttributes: new { title = "Manage"})
                        }
                        else if(User.IsInRole("Admin"))
                        {
                            <a href="~/Catig" class="btn btn-success"> Categories</a><br /><br />
                            <a href="~/Roles" class="btn btn-success">Add Roles</a><br /><br />

                            
                        }
                    </div>
                </div>
            </div>
        </li>
        <li class="divider"></li>
        <li>
            <div>
                <div class="row">
                    <div class="col-lg-12">
                        <p>
                            <a href="javascript:document.getElementById('logoutForm').submit()" class="btn btn-danger btn-block">Logof</a>
                        </p>
                    </div>
                </div>
            </div>
        </li>
    </ul>
</li>

</ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
